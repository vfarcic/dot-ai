{
  "mcpServers": {
    "dot-ai": {
      "command": "node",
      "args": [
        "${PWD}/dist/mcp/server.js"
      ],
      "env": {
        "KUBECONFIG": "${PWD}/kubeconfig.yaml",
        "DOT_AI_SESSION_DIR": "${PWD}/tmp/sessions",
        "QDRANT_URL": "http://localhost:6333",
        "AI_PROVIDER": "anthropic_haiku"
      }
    },
    "coderabbitai": {
      "command": "npx",
      "args": [
        "coderabbitai-mcp@latest"
      ],
      "env": {
        "GITHUB_PAT": "${GITHUB_TOKEN}"
      }
    }
  },
  "general": {
    "previewFeatures": true
  }
}